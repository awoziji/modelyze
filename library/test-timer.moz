



include ModelyzeHC


def Timer(timeout:Real, t:Signal) = {
    def Time:Mode;
    hybridchart initmode Time {
      mode Time {
        init t 0.;
        t' = 1.0;
        transition Time when (t >= timeout) action (t <- 0.);
      };
    };
}

def mini = {
    def x:Real;
    Timer(3.0, x);
    probe("x") = x;    
}


def main = printsim(mini, 0.1, 10.0)

