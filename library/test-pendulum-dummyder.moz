include MechsysBasics
include HybridSimulation
include ExportModelica


//Manual index reduction and dummy state selection
let Pendulum m:Real -> l:Real -> startAngle:Real -> Equations =
  let g = 9.81 in
  let T:Force in
  let x:Position in
  let y:Position in
  let dx:Velocity in
  let dy:Velocity in
  let yd:Velocity in

  init x (l * sin startAngle);
  init y (-l * cos startAngle);

  dx = der x;
  dy = der y;
  -T*x/l = m*dx';
  -T*y/l - m*g = m*dy'; 
  x*x + y*y = l*l;
  x*dx + y*yd = 0.;
  x*dx' + dx^2. + y*dy' + dy^2. = 0.;
  probe "x" = x;
  probe "Lenght" = (sqrt(x*x+y*y))



let _ = 
  let angle = 45.*3.14/180. in
  printsim (Pendulum 5.0 2.0 angle) 0.01 10.
