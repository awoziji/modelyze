include ModelyzeDAE

def SimpleDAE(initval:Real, c:Real) = {
    def x:Real;
    init x initval;
    der(x) = c * x;
    probe("x") = x;
}

include ModelyzeMA


def SimpleDAEActor(initval:Real, c:Real) = {
  Actor(SimpleDAE(initval,c),[],[],daeInit,daeDoStep,daeGet,daeSet);    
}



def MainModel() = {
//    SimpleDAEActor(1.0,-1.0);
    SimpleDAEActor(1.0,1.0);
}

def main = printsim(MainModel(),0.1, 5.0)










