include ExportModelica
include AnalogElectrical
include RotationalMechanical
include Simulation

let Driveline =
  let r1:Rotational in
  let r2:Rotational in
  let r3:Rotational in
  let r4:Rotational in
  let r5:Rotational in
  let r6:Rotational in
  let r7:Rotational in
  ConstantTorque 2. r1;
  TorqueSensor r1 r2 (probe "tau1");
  SpeedSensor r2 (probe "w1");
  Inertia 10. r2 r3;
  SpeedSensor r3 (probe "w2");
  TorqueSensor r3 r4 (probe "tau2");
  Spring 5. r4 r5;
  SpeedSensor r5 (probe "w3");  
  TorqueSensor r5 r6 (probe "tau3");
  Inertia 2. r6 r7;
  SpeedSensor r7 (probe "w4") 

 
let main = 
   printsim Driveline 0.01 1.
   //printLine (exportModelica "Driveline" Driveline)

  

  
