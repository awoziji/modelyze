include ExportModelica
include MechsysBasics
include HybridSimulation

let MechSys =
  let r1:Rotational in
  let r2:Rotational in
  let r3:Rotational in
  DCMotor r1;
  Inertia 0.2 r1 r2;
  FlexibleShaft 10 r2 r3;
  AngleSensor r3 (probe "phi") 

let main = 
  printsim MechSys 0.1 40
